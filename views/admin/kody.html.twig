<form action="kody.php" method="POST">
    <div class="form-row align-items-center">
        <div class="col-sm-3">
            <label class="sr-only" for="inlineFormInputName">Ilość kodów</label>
            <input type="text" name="count" class="form-control mb-2 mb-sm-0" id="inlineFormInputName" placeholder="Ilość kodów, np. 10">
        </div>
        <div class="col-sm-3">
            <label class="sr-only" for="inlineFormInputGroupUsername">Długość kodu</label>
            <div class="input-group mb-2 mb-sm-0">
                <input type="text" name="length" class="form-control" id="inlineFormInputGroupUsername" placeholder="Długość kodu, np. 6">
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success">Wygeneruj!</button>
        </div>
    </div>
</form>
<br />
{% if kody is not empty %}
    <div class="alert alert-warning" role="alert">
        Wygenerwowane kody:
    </div>
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Kod</th>
        </tr>
        </thead>
        <tbody>
        {% for kod in kody %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ kod }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}