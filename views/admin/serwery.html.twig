<form action="dodaj.php" method="POST">
    <div class="form-row align-items-center">
        <div class="col-sm-3">
            <label class="sr-only" for="inlineFormInputName">ID Serwera</label>
            <input type="text" name="id" class="form-control mb-2 mb-sm-0" id="inlineFormInputName" placeholder="ID serwera z Sourcebansów">
        </div>
        <div class="col-sm-3">
            <label class="sr-only" for="inlineFormInputGroupUsername">Nazwa Serwera</label>
            <div class="input-group mb-2 mb-sm-0">
                <div class="input-group-addon">@</div>
                <input type="text" name="name" class="form-control" id="inlineFormInputGroupUsername" placeholder="Nazwa serwera np. CSGO Arena #1">
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success">Dodaj nowy serwer!</button>
        </div>
    </div>
</form>
<br />
<div class="alert alert-warning" role="alert">
    Serwery:
</div>
<table class="table table-dark">
    <thead>
    <tr>
        <th scope="col">#ID</th>
        <th scope="col">ID Serwera</th>
        <th scope="col">Nazwa Serwera</th>
        <th scope="col">Akcje</th>
    </tr>
    </thead>
    <tbody>
        {% for key, serwer in servers %}
            <tr>
                <td>{{ serwer.id }}</td>
                <td>{{ serwer.idserwera }}</td>
                <td>{{ serwer.nazwa }}</td>
                <td>
                    <a href="usun.php?id={{ serwer.id }}"><button type="button" class="btn btn-danger">Usuń</button></a>
                    <a href="edytuj.php?id={{ serwer.id }}"><button type="button" class="btn btn-primary">Edytuj</button></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>